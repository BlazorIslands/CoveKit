@page "/demo-basic-components"

<h3>DemoBasicComponents</h3>

<CoveCard Border="true"
          BorderColor="_firstTheme.borderColor"
          Shadow="true"
          ShadowColor="_firstTheme.shadowColor"
          BackgroundColor="_firstTheme.backgroundColor"
          Round="true"
          Width="100"
          Height="100">

    <div class="row">
        <div class="col">
            <CoveText Font="CoveFont.LucidaConsole"
                      FontSize="CoveFontSize.Large"
                      Class="text-center">
                This is a CoveText component
            </CoveText>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <CoveTextInput Label="First Name"
                           Placeholder="Enter first name here..."
                           Border="true"
                           BorderColor="_firstTheme.borderColor"
                           Shadow="true"
                           ShadowColor="_firstTheme.shadowColor"
                           MaxLength="255"
                           ShowCounter="true"
                           Width="100" />
        </div>
        <div class="col">
            <CoveTextInput Label="Last Name"
                           Placeholder="Enter last name here..."
                           Border="true"
                           BorderColor="_firstTheme.borderColor"
                           Shadow="true"
                           ShadowColor="_firstTheme.shadowColor"
                           Width="100" />
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="row">
                <CoveIntegerInput Placeholder="Enter age here..."
                                  Label="Age"
                                  Border="true"
                                  BorderColor="_firstTheme.borderColor"
                                  Shadow="true"
                                  ShadowColor="_firstTheme.shadowColor"
                                  Width="100" />
            </div>

            <div class="row">
                <CoveFloatInput TValue="double"
                                Label="Weight"
                                Placeholder="Enter weight here..."
                                Border="true"
                                BorderColor="_firstTheme.borderColor"
                                Shadow="true"
                                ShadowColor="_firstTheme.shadowColor"
                                Width="100" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <CoveToggleInput />
        </div>

        <div class="col d-flex justify-content-end">
            <CoveButton Text="Click Me"
                        Border="true"
                        Shadow="true"
                        Round="true"
                        BackgroundColor="CoveColor.BoldYellow"
                        OnClick="ChangeColorClicked" />
        </div>
    </div>
</CoveCard>

<CoveToggleInput Border="true"
                 BorderColor="CoveColor.Black"
                 Shadow="true"
                 ShadowColor="CoveColor.Black"
                 SwitchColor="CoveColor.BoldLime"
                 SliderColor="CoveColor.MutedBlue" />

@code {
    private (CoveColor borderColor, CoveColor backgroundColor, CoveColor shadowColor) _firstTheme = (CoveColor.Black, CoveColor.MutedPurple, CoveColor.Black);
    private (CoveColor borderColor, CoveColor backgroundColor, CoveColor shadowColor) _secondTheme = (CoveColor.Ash, CoveColor.MutedPurple, CoveColor.MutedTeal);

    private void ChangeColorClicked()
    {
        _firstTheme = _firstTheme == (CoveColor.Black, CoveColor.MutedPurple, CoveColor.Black) ? (CoveColor.Ash, CoveColor.MutedPurple, CoveColor.MutedTeal) : (CoveColor.Black, CoveColor.MutedPurple, CoveColor.Black);
    }
}
